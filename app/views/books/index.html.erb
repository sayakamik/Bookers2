<!-- 共通レイアウトページ -->
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <!-- get_profile_image => user.profileに登録の画像を取出 -->
        <%= image_tag current_user.get_profile_image(100,100) %>
        <table class="table" >
          <tr><th>name</th><td><b><%= current_user.name %></b></td></tr>
          <tr><th>introduction</th><td><b><%= current_user.introduction %></b></td></tr>
        </table>
        <div class="row-m-3">
          <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>

      <h2 class ="new-book mt-3">New book</h2>
      <%= form_with model: @book, url:'/books', method: :post do |f| %>
            <p>Title</p>
            <%= f.text_field :title %>
            <p>Opinion</p>
            <%= f.text_area :body %><br>
          <button class="btn btn-success" type="submit">Create Book</button>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table>
          <tr>
            <th><p> </p></th>
            <th><p>Title</p></th>
            <th><p>Opinion</p></th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><span><%= link_to user_path(book.user.id) do %><%= image_tag book.user.get_profile_image(70,70) %><% end %></span></td>
            <td><span><%= link_to book_path(book.id) do %><%= book.title %><% end %></span></td>
            <td><span><%= book.body %></span></td>
          </tr>
          <% end %>
        </table>
    </div>
</div>