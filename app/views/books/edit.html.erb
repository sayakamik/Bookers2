<div class="container">
  <div class="row">
    <div class="col-6 justify-content-center">
      <h1>Editing Book</h1>
        <%= form_with model: @book , url:'/books', method: :patch do |f| %>
            <p>Title</p>
            <%= f.text_field :title %>
            <p>Opinion</p>
            <%= f.text_area :body %><br>
            <button class="btn btn-success" type="submit">Update Book</button>

          <%= link_to 'Show', book_path(@book.id) %>
          <%= link_to 'Back', books_path %>
        <% end %>
    </div>
  </div>
</div>