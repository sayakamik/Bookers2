<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!-- @book1(本の投稿者)のuser info -->
      <%= render 'books/userinfo', user: @user %>
      <!-- 投稿 -->
      <%= render 'books/new', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">

      <h2>Books</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td><span><%= link_to user_path(book.user.id) do %><%= image_tag book.user.get_profile_image(80,80) %> <% end %> </span></td>
              <td><span><%= link_to book_path(book.id) do %> <%= book.title %> <% end %></span></td>
              <td><span><%= book.body %></span></td>
              <td colspan="3"></td>
            </tr>
          </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>