<!-- 共通レイアウトページ -->
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--切り取りしました。-->
      <!-- current_userのuser info -->
      <%= render 'books/userinfo', user: current_user %>
      <!-- 投稿 -->
      <%= render 'books/new', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><span><%= image_tag user.get_profile_image(80,80) %></span></td>
              <td><span><%= user.name %></span></td>
              <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>