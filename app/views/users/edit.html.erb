<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-11 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %> errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
        <%= form_with model: @user , url: user_path(@user.id), method: :patch do |f| %>
          <div class="form-group mb-0">
            <label for="user_name">Name</label><br>
            <%= f.text_field :name, class: "form-control block", autofocus: true, id:"inputName"%><br>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label><br>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class="form-group mb-0">
            <label for="user_introduction">Introduction</label><br>
            <%= f.text_area :introduction, class: "form-control block" %><br>
          </div>
          <div class="form-group">
            <button class="btn btn-secondary" type="submit">Update User</button>
          </div>
        <% end %>
    </div>
  </div>
</div>