<div class="container">
  <div class="row">
    <div class="col-5">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %> errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
        <%= form_with model: @user , url: user_path(@user.id), method: :patch do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label><br>
            <%= f.text_field :name, autofocus: true, id:"inputName"%><br>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label><br>
            <%= f.text_area :introduction %><br>
          </div>
          <div class="form-group">
            <button class="btn btn-success" type="submit">Update User</button>
          </div>
        <% end %>
    </div>
  </div>
</div>